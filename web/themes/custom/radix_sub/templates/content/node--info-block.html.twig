{#
/**
 * @file
 * Template for a Node.
 */
#}
{% extends 'node.html.twig' %}

{% block content %}
    {{ title_prefix }}
    <h3{{ title_attributes }}>
         {{ label }}
    </h3>
    {{ title_suffix }}

    {% if display_submitted %}
        <footer>
            {{ author_picture }}
            <div{{ author_attributes }}>
                {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
                {{ metadata }}
            </div>
        </footer>
    {% endif %}

    <div{{ content_attributes }}>
        {{ content }}
    </div>
{% endblock %}
